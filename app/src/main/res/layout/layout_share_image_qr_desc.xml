<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_image_qr_desc"
    android:layout_width="1080px"
    android:layout_height="420px"
    android:background="@color/trans"
    android:orientation="horizontal"
    android:visibility="invisible"
    tools:ignore="PxUsage">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:layout_margin="@dimen/len_6"
            tools:ignore="RtlHardcoded">

            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/len_6">

                <ImageView
                    android:id="@+id/desc_qrcode"
                    android:scaleType="fitXY"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="100%"
                    tools:ignore="ContentDescription" />

            </android.support.percent.PercentFrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/len_20"
                android:background="@color/orange_900" />

            <View
                android:layout_width="@dimen/len_20"
                android:layout_height="1dp"
                android:background="@color/orange_900" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="end"
                android:background="@color/orange_900" />

            <View
                android:layout_width="@dimen/len_20"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/orange_900" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="bottom"
                android:background="@color/orange_900" />

            <View
                android:layout_width="@dimen/len_20"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/orange_900" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="bottom|end"
                android:background="@color/orange_900" />

            <View
                android:layout_width="@dimen/len_20"
                android:layout_height="1dp"
                android:layout_gravity="bottom|end"
                android:background="@color/orange_900" />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/share_code"
        android:layout_marginTop="@dimen/len_2"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/font_16"
        tools:text="@string/share_code" />

</LinearLayout>