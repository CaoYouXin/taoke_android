<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TabLayout.Coupon" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance.Coupon</item>
        <item name="tabSelectedTextColor">@color/orange_800</item>
    </style>

    <style name="TabTextAppearance.Coupon" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/grey_800</item>
    </style>

</resources>
