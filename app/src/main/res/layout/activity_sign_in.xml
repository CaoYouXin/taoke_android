<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/len_56"
        android:paddingLeft="@dimen/len_56"
        android:paddingRight="@dimen/len_56"
        android:paddingStart="@dimen/len_56"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_72"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_prefix"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_6"
                android:layout_marginStart="@dimen/len_6"
                android:background="@null"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/len_6"
            android:background="@color/grey_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_12"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:textSize="@dimen/font_16" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/password_visiable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{gmi-eye}"
                android:textColor="@color/grey_400"
                android:textSize="@dimen/font_20"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/len_6"
            android:background="@color/grey_800" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_72"
            android:background="@drawable/sign_in_up_next_border"
            android:padding="@dimen/len_10">

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@string/sign_in"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_16" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="invisible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_account"
                android:textColor="@color/black" />

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="@dimen/len_12"
                android:layout_marginEnd="@dimen/len_6"
                android:layout_marginLeft="@dimen/len_6"
                android:layout_marginRight="@dimen/len_6"
                android:layout_marginStart="@dimen/len_6"
                android:background="@color/black" />

            <TextView
                android:id="@+id/has_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/has_problem"
                android:textColor="@color/black" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            tools:ignore="UselessLeaf" />
    </LinearLayout>
</FrameLayout>