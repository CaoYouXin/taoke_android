<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_history"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginStart="@dimen/len_16" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/clear_history"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_marginTop="@dimen/len_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="{ion-trash-a}"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/font_28"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <me.next.tagview.TagCloudView
        android:layout_marginTop="@dimen/len_36"
        android:id="@+id/search_history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tcvItemBorderHorizontal="@dimen/len_8"
        app:tcvItemBorderVertical="@dimen/len_10"
        app:tcvBorder="@dimen/len_12"
        app:tcvTextColor="#282828"
        app:tcvBackground="@drawable/tab_ripple_grey"
        app:tcvCanTagClick="true" />

</FrameLayout>