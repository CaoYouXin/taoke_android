<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:background="@color/grey_100"
        android:elevation="@dimen/len_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/font_16" />

        <com.mikepenz.iconics.view.IconicsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"
            android:padding="@dimen/len_6"
            android:text="{gmi-search}"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/font_24" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_100" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_60"
        android:background="@color/white"
        android:elevation="@dimen/len_4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_discover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-lightbulb}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_discover"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-chart-bar-outline}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_chat"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-message-typing}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_message"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-user-outline}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_account"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>