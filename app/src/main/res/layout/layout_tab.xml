<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-lightbulb}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_discover"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-chart-bar-outline}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_chat"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-message-typing}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_message"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6"
                android:paddingRight="@dimen/len_6"
                android:paddingTop="@dimen/len_10"
                android:text="{typ-user-outline}"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_28"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_account"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_300" />

</FrameLayout>

